      .socials
        .fb-like{"data-href" => "http://bst.yokohama/", "data-layout" => "box_count", "data-action" => "like", "data-show-faces" => "false", "data-share" => "false"}
        .tweet
          :plain
            <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja" data-count="vertical">ツイート</a>
