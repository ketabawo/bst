<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <!--[if IE]>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <![endif]-->
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "BST ボートシーバストーナメント公式サイト" %></title>
    <meta name="description" content="<%= current_page.data.description %>"> 
    <meta name="keywords" content="<%= current_page.data.keywords || "BST, ボートシーバストーナメント, 東京湾, 横浜, ベイエリア, ボートシーバス" %>"> 
    <link rel="dns-prefetch" href="//maxcdn.bootstrapcdn.com">
    <link rel="dns-prefetch" href="//connect.facebook.net/">
    <link rel="dns-prefetch" href="//ajax.googleapis.com">
    <link rel="dns-prefetch" href="//www.google-analytics.com">
    <%= stylesheet_link_tag "all" %>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <script type="text/javascript" src="//www.google.com/jsapi"></script>
    <!--[if lt IE 10]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <meta property="og:type" content="website">
    <meta property="og:title" content="<%= current_page.data.title || "BST ボートシーバストーナメント公式サイト" %>">
    <meta property="og:description" content="<%= current_page.data.description %>">
    <% if current_page.data.ogp != "" %>
    <meta property="og:image" content="http://bst.yokohama/<%= current_page.data.ogp %>">
    <% else %>
    <meta property="og:image" content="http://bst.yokohama/assets/images/fb.jpg">
    <% end %>
    <meta property="og:url" content="http://bst.yokohama<%= current_page.url %>">
    <meta property="fb:app_id" content="723141461159033">
    <link rel="icon" type="image/vnd.microsoft.icon" href="/assets/images/favicon.ico">
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-58076012-1', 'auto');
      ga('require', 'displayfeatures');
      ga('send', 'pageview');
    </script>
    <script type="application/ld+json">
    {
    "@context": "http://schema.org",
    "@type": "WebSite",
    "url": "http://bst.yokohama/",
    "potentialAction": {
     "@type": "SearchAction",
     "target": "http://bst.yokohama/search?q={search_term}",
     "query-input": "required name=search_term"
     }
    }
    </script>
  </head>
  <body class="<%= page_classes %>">
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '723141461159033',
          xfbml      : true,
          version    : 'v2.6'
        });
      };
    
      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>
    <%= partial "shared/header", locals: {val: page_classes}%>
    <%= yield %>
    <%= partial "shared/footer" %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </body>
</html>